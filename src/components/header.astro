---
const navbarButtonsInfo = {
	home: {
		href: '/',
		icon: 'fa-house',
		text: 'Home',
	},
	phone: {
		href: 'phone.html',
		icon: 'fa-mobile',
		text: 'Phone',
	},
	desktop: {
		href: 'desk.html',
		icon: 'fa-desktop',
		text: 'Desktop',
	},
	contact: {
		href: '#phoneFooter',
		icon: 'fa-circle-info',
		text: 'Contact',
	},
}
---
<header class="navbar" id="navbar-header">

    <nav class="navbar-header">

        <div class="logo">
            
            <a href="/" class="brand-link">                    
                <i class="fa-solid fa-leaf"></i>
                <span class="brand"> Galy </span>
            </a>

        </div>

        <div class="links">

            <a href={navbarButtonsInfo.home.href} class="navbar-link">
                <i class={`fa-solid ${navbarButtonsInfo.home.icon}`}></i>
                <span class={`navbar-text`}>{navbarButtonsInfo.home.text}</span>
            </a>
            
            <a href={navbarButtonsInfo.phone.href} class="navbar-link">
                <i class={`fa-solid ${navbarButtonsInfo.phone.icon}`}></i>
                <span class={`navbar-text`}>{navbarButtonsInfo.phone.text}</span>
            </a>
            
            <a href={navbarButtonsInfo.desktop.href} class="navbar-link">
                <i class={`fa-solid ${navbarButtonsInfo.desktop.icon}`}></i>
                <span class={`navbar-tex`}>{navbarButtonsInfo.desktop.text}</span>
            </a>

            <a href={navbarButtonsInfo.contact.href} class="navbar-link">
                <i class={`fa-solid ${navbarButtonsInfo.contact.icon}`}></i>
                <span class={`navbar-text`}>{navbarButtonsInfo.contact.text}</span>
            </a>

        </div>

    </nav>

</header>

<style>

    header {
        padding: .5em 0;
    }

    a {
        color: #03888F;
        font-weight: 300;
        font-size: 1em;
    }

    a:hover {
        color: #03888F;
    }

    .navbar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 1em;
    }

    .logo .fa-leaf {
        color: #EDAF76;
        font-size: 1.5em;
    }

    .logo .brand {
        font-size: 1.5em;
    }

    .navbar-link {
        display: inline-flex;
        align-items: center;
        margin: 0 .5em;
        padding: .5em 1em;
        border-radius: .5em;
        transition: .3s;
    }

    .navbar-link .fa-solid {
        padding: 0 .5em 0 0;
    }

    .navbar-link:hover {
        background: #03888F;
        color: white;
        transition: .3s;
    }
</style>